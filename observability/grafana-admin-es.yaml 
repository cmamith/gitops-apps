---
apiVersion: external-secrets.io/v1beta1
kind: ExternalSecret
metadata:
  name: grafana-admin
  namespace: observability
spec:
  refreshInterval: 1h
  secretStoreRef:
    # This must match the ClusterSecretStore you already have in eks-3tier-app
    kind: ClusterSecretStore
    name: aws-secrets
  target:
    name: grafana-admin
    creationPolicy: Owner
  data:
    - secretKey: admin-user
      remoteRef:
        key: grafana/admin              # AWS Secrets Manager secret name
        property: adminUser
    - secretKey: admin-password
      remoteRef:
        key: grafana/admin
        property: adminPassword
